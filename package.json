{
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "start": "npx serve . -p 8080",
    "preview": "npx http-server . -p 8080",
    "dev": "vite",
    "build": "vite build",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:downloads": "playwright test tests/e2e/downloads.spec.js",
    "lint": "eslint \"assets/js/**/*.js\" --ext .js,.mjs",
    "lint:fix": "eslint \"assets/js/**/*.js\" --ext .js,.mjs --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "generate:docx": "node scripts/generate-docx.js",
    "generate:pdf": "node scripts/generate-pdf.js",
    "generate:markdown": "node scripts/generate-markdown.js",
    "generate:email": "node scripts/generate-email.js",
    "generate:all": "npm run generate:docx && npm run generate:markdown && npm run generate:email && npm run generate:pdf",
    "generate:resume": "node scripts/generate-single-resume.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.58.0",
    "docx": "^9.5.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "html-to-text": "^9.0.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "mammoth": "^1.11.0",
    "prettier": "^3.7.4",
    "vite": "^7.2.7",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "assets/js/**/*.js": [
      "eslint --fix"
    ],
    "*.{js,css,html,json,md}": [
      "prettier --write"
    ]
  }
}
